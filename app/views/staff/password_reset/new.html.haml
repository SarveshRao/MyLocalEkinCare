= content_for :title, 'Forgot password'

%section#content.m-t-lg
  .container.aside-xl.text-center
    %section
      %header.text-center
        %a.h3.font-bold{href: root_path} eKincare
    %header.wrapper
      %strong
        Forgot your password?
    %section.m-b-lg
      = form_for @staff, url: new_staff_password_reset_path, html: { method: :patch } do |f|
        .list-group
          .list-group-item
            = f.text_field :email, class: 'form-control no-border parsley-validated',required: true, autofocus: true,  placeholder: 'Email'
        = f.submit "Send reset password to e-mail", class: 'btn btn-primary m-b'
