= content_for :title, 'New partner'

%section#content
  %ol.breadcrumb
    = render_breadcrumbs seperator: ''


  %section.vbox
    %section.scrollable.padder
      .m-b-md
        %h4
          %a.font-bold{href: "#"}
            New Partner
      .row
        .col-md-8
          %section.panel.panel-default
            %header.panel-heading.font-bold Partner Form
            .panel-body.row
              = form_for @partner, html: {"data-validate" => "parsley"},url:staff_partners_path(@partner) do |f|
                .col-md-6
                  .form-group
                    = f.label :Code
                    %sup.text-danger
                      *
                    = f.text_field :code,{class: 'form-control parsley-validated', 'data-required' => 'true', autofocus: true}
                  .form-group
                    = f.label :Title
                    %sup.text-danger
                      *
                    = f.text_field :title,{class: 'form-control parsley-validated', 'data-required' => 'true', autofocus: true}

                  .form-group
                    = f.label :Point_Of_Contact
                    %sup.text-danger
                      *
                    = f.text_field :poc,{class: 'form-control parsley-validated', 'data-required' => 'true'}

                  .form-group
                    = f.label :Description
                    %sup.text-danger
                    = f.text_area :description, {class: 'form-control'}

                  .form-group
                    = f.label :Email
                    %sup.text-danger
                      *
                    = f.email_field :email,{class: 'form-control parsley-validated', 'data-required' => 'true'}


                  .form-group
                    = f.label :Mobile
                    %sup.text-danger
                      *
                    = f.text_field :mobile,{class: 'form-control parsley-validated', 'data-required' => 'true', autofocus: true}
                  .form-group
                    = f.submit "submit",{class: 'btn btn-md btn-primary pull-right' }
        .col-md-4
