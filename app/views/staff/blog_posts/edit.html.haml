= content_for :title, 'Edit blog post'

%section#content
  %section.vbox
    %section.scrollable.padder
      .m-b-md
        %h4
          %a.font-bold{href: "#"}
            Edit Your Post
      .row
        .col-md-8
          %section.panel.panel-default
            %header.panel-heading.font-bold Edit Post
            .panel-body.row
              = form_for @blog_post, url: staff_blog_post_path, html: {'data-validate' => 'parsley', :multipart => true} do |f|
                .col-md-6
                  .form-group
                    = f.label :title
                    %sup.text-danger
                      *
                    = f.text_field :title,{class: 'form-control parsley-validated', 'data-required' => 'true', autofocus: true}

                  .form-group
                    = f.label :author
                    %sup.text-danger
                      *
                    = f.text_field :author,{class: 'form-control parsley-validated', 'data-required' => 'true'}

                  .form-group
                    = f.label :tags
                    %sup.text-danger
                      *
                    = f.text_field :tags,{class: 'form-control parsley-validated', 'data-required' => 'true', placeholder: 'Use comma(,) as seperator'}

                  .form-group
                    = f.label :body
                    %sup.text-danger
                      *
                    = f.text_area :body,{class: 'form-control parsley-validated', 'data-required' => 'true'}
                  .form-group
                    %img{src: @blog_post.image_url(:thumb)}
                    = f.file_field :image

                  .form-group
                    = f.submit "submit",{class: 'btn btn-md btn-primary pull-right' }

