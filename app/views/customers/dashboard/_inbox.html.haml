- inbox_activities = Inbox.joins("inner join health_assessments h on h.id=inboxes.associated_id where h.customer_id=#{current_online_customer.id} and activity_type like '%Assessment%'")
- inbox_activities_status = Inbox.joins("inner join health_assessments h on h.id=inboxes.associated_id where h.customer_id=#{current_online_customer.id} and activity_type like '%Assessment%' and inboxes.status = true")
%section.panel-body.open-sans.scrollable
  - if (inbox_activities.count-inbox_activities_status.count) == 0
    %section.panel-body{style:"color: black;"}
      No Assessments
  - else
    -if type=inbox_activities.last.activity_type.split('Assessment')
      -#-if type[0].downcase.to_s!="recommendation"
      %a.auto{href: '/customers/health_assessments?type='+type[0].to_s}
        %span.label.label-info
          view all assessments
      -#-else
      -#  %a.auto{href: '/customers/health_assessments?type=Body'}T
      -#    %span.label.label-info
      -#      view all assessments
    - inbox_activities.each do |activity|
      -unless activity.activity_type =~ /Assessment/ and activity.status==true
        -unless activity.activity_type == 'Appointment'
          %article.media
            %span.pull-left.thumb-sm
              - if activity.activity_type == 'MedicalRecord'
                %i.fa.fa-clipboard.fa.fa-2x
              - elsif activity.activity_type == 'BodyAssessment'
                = image_tag("Body.PNG", size: "50x30", style: 'opacity: 0.5;height: 30px;width: 25px')
              - elsif activity.activity_type == 'DentalAssessment'
                = image_tag("Dental.png", size: "30x30", style: 'opacity: 0.5;height: 30px;width: 25px')
              - elsif activity.activity_type == 'VisionAssessment'
                = image_tag("Eyes.PNG", size: "30x30", style: 'opacity: 0.5;height: 30px;width: 25px')

            .media-body.text-muted
              .pull-right.media-xs.text-center.text-muted
                - if activity.associated_date.to_date > Date.today.to_date
                  %strong.h4
                    = day activity.associated_date
                  %br
                  %small.label.bg-light
                    = month_name activity.associated_date
                - else
                  - if activity.is_appointment_message?
                    %strong.h4
                      = time_stamp activity.appointment.date
                    %br
                    %small.label.bg-light
                      = am_pm activity.appointment.date
                  - else
                    %strong.h4
                      = day activity.associated_date
                    %br
                    %small.label.bg-light
                      = month_name activity.associated_date

                %br/
              -#%small.label.bg-light
                              -#= formatted_date activity.created_at
              - if activity.activity_type =~ /Assessment/
                %a.h5{style: 'color: #000', href: customers_health_assessment_path({type: activity.activity_type.gsub!(/Assessment/, ''), id: activity.associated_id,inbox_id:activity.id})}
                  = activity.title
              - elsif activity.activity_type == 'MedicalRecord'
                %a.h5{style: 'color: #000', href: customers_documents_path}
                  = activity.title
              -else
                %a.h5{style: 'color: #000'}
                  = activity.title
              %small.block
                -#%a{href: "#"} John Smith
                %span.label.label-success
                  = activity.badge
