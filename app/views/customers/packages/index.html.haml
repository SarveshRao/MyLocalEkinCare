                    %p.eKin_price.font-bold
                      = "Rs "+number_with_precision(package.selling_price, precision: 2)
                    %p
                      %span.text-danger
                        %strike.text-danger
                          = "Rs "+number_with_precision(package.mrp, precision: 2)
                    %p
