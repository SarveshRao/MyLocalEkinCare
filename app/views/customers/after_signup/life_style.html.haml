%section.panel.panel-default.m-n.b-n
  -#%header.panel.panel-heading.m-n.b-n{style: 'background-color: #556270 !important;color: #fff'}
    %span.h4.font-bold
      Registration/Contact details
  .panel-body{style: 'background-color: #556270 !important;color: #fff; border: 4px solid #fff; -moz-border-radius: 6px; -webkit-border-radius: 6px; border-radius: 6px; '}
    %span.h3
      2: Lifestyle Details
    %p
    -#%span.h5.font-bold
      Why are we asking this?
    %br
    %span.h5
      This information is used to understand your current health and assess future risks.
    #contact_info.tab-pane.padder-v
      .row.m-b
        .col-md-12
          = form_for @customer, url: after_signup_path(id: @customer.current_state.to_sym), html: {id: 'customer_add_basic_details_form'}  do |f|
            .list-group
              .row.no-gutter
                .col-md-6
                  .list-group-item{style: 'border-radius: 0'}
                    = f.select :feet, options_for_select(1..8, selected: @customer.customer_vitals.feet),{include_blank:'Feet'}, {class: 'form-control no-border ', required: true}
                .col-md-6
                  .list-group-item{style: 'border-radius: 0'}
                    = f.select :inches, options_for_select(0..12, selected: @customer.customer_vitals.inches),{include_blank:'Inches'}, {class: 'form-control no-border ', required: true}

              .list-group-item
                = f.number_field :weight, {class: 'form-control no-border', placeholder: 'Weight in kgs', required: true, maxlength: 3}

              .list-group-item
                = f.select :frequency_of_exercise, options_for_select(['No', 'Occasionally', 'Often'], @customer.frequency_of_exercise ),{include_blank:'Do you excercise'}, {class: 'form-control no-border ', required: true}

              .list-group-item
                = f.select :smoke, options_for_select(['No', 'Occasionally', 'Often'], @customer.smoke),{include_blank:'Do you smoke'}, {class: 'form-control no-border ', required: true}

              .list-group-item
                = f.select :alcohol, options_for_select(['No', 'Occasionally', 'Often'], @customer.alcohol ),{include_blank:'Do you consume alcohol'}, {class: 'form-control no-border ', required: true}

            .list-group
              %a{class: 'btn btn-md btn-danger customer-life-style-cancel-btn pull-left', href: "#{previous_wizard_path}"} Back
              = f.submit 'Next', {class:'btn btn-md btn-primary pull-right'}

